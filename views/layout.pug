doctype html
html
  head
    title Node API
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-md.bg-dark
      a.navbar-brand(href='/') 
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', 
      aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/')
              | Home 
              span.sr-only (current)
          if user
            li.nav-item
              a.nav-link(href='/articles/add') Add Article
        ul.nav.navbar-nav.navbar-right
          if user
            li
              a(href='/users/logout') Logout
          else            
            li.nav-item
              a.nav-link(href='/users/register') Register
            li.nav-item
              a.nav-link(href='/users/login') Login
      form.form-inline.my-2.my-lg-0
        
        
    .container
      br
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      br
      block content
      br
      hr
      footer
        p copyright &copy; 2018
    script(src='/bower_components/bootstrap/js/tests/vendor/jquery-1.9.1.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
